<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="2dp"
    app:contentPadding="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/list_rush_event_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_rush_event_name"
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="wrap_content"
                android:text="Test"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/list_rush_event_date"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:text="Test"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <View
            android:id="@+id/list_rush_event_line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/list_rush_event_name_layout"
            android:background="@android:color/black"/>
        
        <TextView
            android:id="@+id/list_rush_event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            android:layout_below="@+id/list_rush_event_line1"/>

        <TextView
            android:id="@+id/list_rush_event_time"
            android:text="Test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_below="@+id/list_rush_event_location"/>


    </RelativeLayout>




</android.support.v7.widget.CardView>